<%- include('./partials/_nav'); %>
<div class="nav-bottom-spacing">
    <nav aria-label="breadcrumb" class="py-3 breadcrumb m-0">
        <div class="container">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
            </ol>
        </div>
    </nav>
    <section id="contact-us">
        <div class="container contact-form">
            <div class="contact-image text-center">
                <img src="/images/rocket-contact.png" alt="rocket_contact"/>
            </div>
            <form method="post" action="/contact">
                <h3 class="text-center pb-4 ">Drop Us a Message</h3>
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group py-2">
                            <input type="text" name="txtName" class="form-control" placeholder="Your Name *" value="" />
                        </div>
                        <div class="form-group py-2">
                            <input type="text" name="txtEmail" class="form-control" placeholder="Your Email *" value="" />
                        </div>
                        <div class="form-group py-2">
                            <input type="text" name="txtPhone" class="form-control" placeholder="Your Phone Number *" value="" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group py-2">
                            <textarea name="txtMsg" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;"></textarea>
                        </div>
                    </div>
                    <div class="form-group pt-4">
                        <input type="submit" name="btnSubmit" class="btn btn-primary btn-dark" value="Send Message" />
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
<%- include('./partials/footer'); %>


